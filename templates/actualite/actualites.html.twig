{% extends 'base.html.twig' %}

{% block title %}Hello ActualiteController!{% endblock %}

{% block body %}

<div class="container">

    <div class="row">

        {% for actualite in actualites %}

            <div class="col-lg-4">
                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title">{{ actualite.titre }}</h5>
                        <div class="small">Publi√© le {{ actualite.date|date('d/m/Y') }}</div>
                        <p class="card-text">{{ actualite.description|slice(0,100) }}</p>
                        <a href="{{ path('actualite', {id:actualite.id}) }}" class="btn btn-primary">Lire</a>
                    </div>

                </div>
            </div>


        {% endfor %}
    
    </div>

</div>

    
   

       
{% endblock %}

