{% extends 'base.html.twig' %}

{% block title %} | Emotionelles{% endblock %}

{% block body %}



<h1>Contactez-moi</h1>
<p>Nous répondons à toutes vos demandes</p>

<form class="mt-4" method="POST">
  <div class="form-group">
  

 <label for="exampleFormControlInput1">Nom</label>
    <input type="text" name="firtname" class="form-control" id="exampleFormControlInput1" placeholder="Nom">
  </div>

<label for="exampleFormControlInput1">Prenom</label>
    <input type="text" name="lastname" class="form-control" id="exampleFormControlInput1" placeholder="Prenom">
  </div>

  <label for="exampleFormControlInput1">numero</label>
    <input type="text" name="number" class="form-control" id="exampleFormControlInput1" placeholder="Numéro de tel">
  </div>

    <label for="exampleFormControlInput1">Adresse Email</label>
    <input type="email" name="email" class="form-control" id="exampleFormControlInput1" placeholder="emotionelle@emotionnelles.com">
  </div>
 
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Votre message</label>
    <textarea class="form-control" name="message" id="exampleFormControlTextarea1" rows="10"></textarea>
  </div>
  <div class="text-right">
  <button type="submit" class="btn btn-primary">Envoyer</button>
  </div>
</form>
{% endblock %}
